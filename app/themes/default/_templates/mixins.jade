mixin nav
  ul
    li
      a(href=site_config.site_url) Home
    for folder in folders
      li
        a(href=site_config.site_url + folder)= folder


mixin folderPost(posts, folder)
  h3.title
    = folder

  ul
    for post in posts
      - if (post.folder == folder)
        h2
          li
            a(href=post.perm_link, title=post.title, class='title')
              = post.title
            small
              | Published on #{post.date} by #{site_config.author}


mixin tagPost(posts, tag)
  h3(id=tag, class='titile')
    = tag

  ul
    for post in posts
      - if (post.tags.indexOf(tag) != -1)
        li
          h2
            a(href=post.perm_link, title=post.title, class='title')
              = post.title
            small
              | Published on #{post.date} by #{site_config.author}
